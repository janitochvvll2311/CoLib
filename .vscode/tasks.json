{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: Compile program file",
			"command": "g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"--std=c++17",
				"-g",
				"-Iinc",
				"${file}",
				"-o",
				"bin/${fileBasenameNoExtension}.exe",
				"bin/*.dll"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"type": "cppbuild",
			"label": "C/C++: Compile library file",
			"command": "g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"--std=c++17",
				"--shared",
				"-g",
				"-Iinc",
				"-Isrc",
				"${file}",
				"-o",
				"bin/${fileBasenameNoExtension}.dll",
				"bin/*.dll"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"type": "cppbuild",
			"label": "C/C++: Compile object file",
			"command": "g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"--std=c++17",
				"-g",
				"-c",
				"-Iinc",
				"${file}",
				"-o",
				"obj/${fileBasenameNoExtension}.o",
				"bin/*.dll"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}